<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@drawable/bg_btn_white_red_square"
    android:minHeight="72dp"
    android:orientation="vertical"
    android:stateListAnimator="@animator/btn_elevation">


    <TextView
        android:id="@+id/textTime"
        style="@style/TextAppearance.AppCompat.Notification.Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_red"
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        tools:text="@string/virus_msg_time_danger"
        android:textColor="@android:color/white"
        />


    <TextView
        android:id="@+id/textTitle"
        style="@style/TextAppearance.AppCompat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:text="发现一个严重威胁，点此进行处理"
        />

    <TextView
        android:id="@+id/textInfo"
        style="@style/TextAppearance.AppCompat.Notification.Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:text="File: Downloads/virus.exe"
        />

    <TextView
        android:id="@+id/textInfo2"
        style="@style/TextAppearance.AppCompat.Notification.Line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:text="13个扫描引擎标记为有害软件，威胁级别 高"/>
</LinearLayout>